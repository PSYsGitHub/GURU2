                <TextView
                    android:id="@+id/hash1_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="5dp"
                    android:text="#힐링"
                    android:textSize="13sp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/Gapyeongpyeong" />

                <TextView
                    android:id="@+id/hash2_5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="5dp"
                    android:layout_marginTop="5dp"
                    android:text="#1박2일"
                    android:textSize="13sp"
                    app:layout_constraintStart_toEndOf="@+id/hash1_5"
                    app:layout_constraintTop_toBottomOf="@+id/Gapyeongpyeong" />

                <ImageView
                    android:id="@+id/GapyeongpyeongImg"
                    android:layout_width="352dp"
                    android:layout_height="167dp"
                    android:layout_marginStart="28dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="28dp"
                    android:scaleType="fitXY"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintHorizontal_bias="0.333"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/hash2_5"
